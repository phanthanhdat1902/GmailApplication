<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/avt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:width="60dp"
        android:height="60dp"
        android:background="@drawable/round_background"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="D" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/avt"
        android:ellipsize="end"
        android:fontFamily="@font/alice"
        android:singleLine="true"
        android:text="Phan Thanh Dat"
        android:textColor="#000000"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/title_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/avt"
        android:layout_below="@id/user_name"
        android:fontFamily="@font/alice"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:text="Lấy cảm hứng với 18 ý tưởng đang thịnh hành này"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/content_mail"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:fontFamily="@font/alice"
        android:layout_toRightOf="@id/avt"
        android:layout_below="@id/title_mail"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:text="Sau đây là nội dung đang phổ biến trên Pinterest"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/time_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày 10 tháng 4"
        android:fontFamily="@font/alice"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/icon_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_favorite_false"
        android:layout_below="@id/title_mail"
        android:layout_alignParentRight="true" />

</RelativeLayout>